<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.junhyuk.soptproject.Activity.Registration">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="옷장에서 사용할 닉네임을 입력해주세요."
        android:layout_gravity="center"
        android:layout_marginTop="124dp"
        android:layout_marginBottom="25dp"
        android:textColor="#000000"
        />

    <EditText
        android:layout_width="271dp"
        android:layout_height="36dp"
        android:hint="닉네임 입력"
        android:paddingTop="5dp"
        android:layout_gravity="center"
        android:textSize="17sp"
        android:textColor="#626262"
        android:id="@+id/textInputNickname"
        android:background="#ecebea"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이미 존재하는 닉네임입니다."
        android:textColor="#e50011"
        android:textSize="9dp"
        android:layout_marginLeft="44dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/textCheck"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별을 선택해주세요"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_marginBottom="28dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="31dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginRight="63dp"
            android:id="@+id/checkMale"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:id="@+id/checkFemale"
            android:layout_marginBottom="30dp"
            />

    </LinearLayout>

    <Button
        android:layout_width="117dp"
        android:layout_height="29dp"
        android:id="@+id/registration_button"
        android:text="입력"
        android:textColor="#ffffff"
        android:background="#658fb8"
        android:layout_gravity="center"

        />

</LinearLayout>
