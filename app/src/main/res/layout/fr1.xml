<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fr1_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:text="금주의 코디"
                        android:textSize="12dp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/title1"/>

                    <ImageView
                        android:layout_below="@id/title1"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="@color/bcbcbc" />

                </RelativeLayout>

                <!--<ViewFlipper-->
                    <!--android:id="@+id/flipper1"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="240dp"-->
                    <!--&gt;-->
                <!--</ViewFlipper>-->


                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="240dp" />


                <com.matthewtamlin.sliding_intro_screen_library.DotIndicator
                    android:id="@+id/pager_indicator"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="20dp"/>

                <!--<LinearLayout-->
                    <!--android:id="@+id/buttonLayout1"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_horizontal"-->
                    <!--android:gravity="center_horizontal"-->
                    <!--android:layout_marginBottom="16dp"-->
                    <!--&gt;-->
                <!--</LinearLayout>-->

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@android:color/darker_gray"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:text="코디왕 랭킹"
                        android:textSize="12dp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/title2"/>

                    <ImageView
                        android:layout_below="@id/title2"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="@color/bcbcbc" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <LinearLayout
                        android:id="@+id/coordiitemLayout1"
                        android:orientation="vertical"
                        android:layout_width="104dp"
                        android:layout_height="127dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="32dp"
                        android:background="@drawable/border">

                        <ImageView
                            android:id="@+id/coordiking_image1"
                            android:src="@drawable/img_woman"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="16dp"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/coordiking_nick1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="후야"
                            android:textSize="10sp"
                            android:textColor="#000000"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="1위"
                            android:textSize="10sp"
                            android:textColor="#668fb9"
                            android:layout_gravity="center_horizontal" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/coordiitemLayout2"
                        android:orientation="vertical"
                        android:layout_width="104dp"
                        android:layout_height="127dp"
                        android:layout_toRightOf="@id/coordiitemLayout1"
                        android:layout_alignTop="@id/coordiitemLayout1"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="32dp"
                        android:background="@drawable/border">

                        <ImageView
                            android:id="@+id/coordiking_image2"
                            android:src="@drawable/img_woman"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="16dp"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/coordiking_nick2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="떡빙이"
                            android:textSize="10sp"
                            android:textColor="#000000"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="2위"
                            android:textSize="10sp"
                            android:textColor="#668fb9"
                            android:layout_gravity="center_horizontal" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/coordiitemLayout3"
                        android:orientation="vertical"
                        android:layout_width="104dp"
                        android:layout_height="127dp"
                        android:layout_toRightOf="@id/coordiitemLayout2"
                        android:layout_alignTop="@id/coordiitemLayout2"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="32dp"
                        android:background="@drawable/border">

                        <ImageView
                            android:id="@+id/coordiking_image3"
                            android:src="@drawable/img_man"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="16dp"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/coordiking_nick3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="앨리스"
                            android:textSize="10sp"
                            android:textColor="#000000"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="3위"
                            android:textSize="10sp"
                            android:textColor="#668fb9"
                            android:layout_gravity="center_horizontal" />

                    </LinearLayout>

                </RelativeLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/bcbcbc"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:text="MD 추천상품"
                        android:textSize="12dp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/title3"/>
                    <ImageView
                        android:layout_below="@id/title3"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="@color/bcbcbc" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="360dp"
                    android:layout_height="240dp"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/img_MD1"
                        android:layout_width="104dp"
                        android:layout_height="113dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"/>
                    <ImageButton
                        android:id="@+id/img_MD2"
                        android:layout_width="104dp"
                        android:layout_height="113dp"
                        android:layout_toRightOf="@id/img_MD1"
                        android:layout_alignTop="@id/img_MD1"
                        android:layout_marginLeft="8dp"/>
                    <ImageButton
                        android:id="@+id/img_MD3"
                        android:layout_width="104dp"
                        android:layout_height="113dp"
                        android:layout_toRightOf="@id/img_MD2"
                        android:layout_alignTop="@id/img_MD2"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:id="@+id/text_MD1"
                        android:text="패딩아노락 후드티"
                        android:textSize="10sp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_MD1"
                        android:layout_alignLeft="@+id/img_MD1"
                        android:layout_marginTop="16dp"/>
                    <TextView
                        android:id="@+id/text_MD2"
                        android:text="배트후드 자켓"
                        android:textSize="10sp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_MD2"
                        android:layout_alignLeft="@id/img_MD2"
                        android:layout_marginTop="16dp"/>
                    <TextView
                        android:id="@+id/text_MD3"
                        android:text="롤업 청스키니"
                        android:textSize="10sp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_MD3"
                        android:layout_alignLeft="@id/img_MD3"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:id="@+id/count_MD1"
                        android:text="27,000원"
                        android:textSize="8sp"
                        android:textColor="#898989"
                        android:layout_below="@id/text_MD1"
                        android:layout_alignLeft="@id/text_MD1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/count_MD2"
                        android:text="44,300원"
                        android:textSize="8sp"
                        android:textColor="#898989"
                        android:layout_below="@id/text_MD2"
                        android:layout_alignLeft="@id/text_MD2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/count_MD3"
                        android:text="19,800원"
                        android:textSize="8sp"
                        android:textColor="#898989"
                        android:layout_below="@id/text_MD3"
                        android:layout_alignLeft="@id/text_MD3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>