<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_codi_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.junhyuk.soptproject.Activity.P_Coordination.CodiMain.CodiMainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_fe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_profile_icon_fe"
            android:layout_margin="16dp"/>

        <TextView
            android:id="@+id/text_coordi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="코디 의뢰를 해보세요"
            android:layout_toRightOf="@id/profile_fe"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:textColor="#595757"/>

        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/coordi_writing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="23dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@mipmap/pencil_writing_button"/>


        <ImageView
            android:layout_below="@id/profile_fe"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/dcdddd" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recylerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>


</LinearLayout>
